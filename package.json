{
  "name": "scrabble-solver",
  "version": "1.0.0",
  "description": "Scrabble Solver",
  "engines": {
    "node": ">=7.9.0"
  },
  "bin": {
    "scrabble-solver": "./bin/scrabble-solver.js"
  },
  "scripts": {
    "build": "better-npm-run build",
    "build:prod": "better-npm-run build:prod",
    "start": "npm-run-all --parallel start:* open",
    "start:backend": "better-npm-run start:backend",
    "start:frontend": "better-npm-run start:frontend",
    "lint": "better-npm-run lint",
    "open": "opn http://localhost:8080",
    "postinstall": "better-npm-run prepare-dictionary",
    "prepare-dictionary": "better-npm-run prepare-dictionary"
  },
  "betterScripts": {
    "build": {
      "command": "rimraf dist && babel-node scripts/build.js"
    },
    "build:prod": {
      "command": "rimraf dist && babel-node scripts/build.js prod",
      "env": {
        "NODE_ENV": "production",
        "API_HOST": "http://kamilmielnik.pl",
        "API_PORT": "5000"
      }
    },
    "start:backend": {
      "command": "node dist/scrabble-solver-backend/index.js dictionary.txt",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start:frontend": {
      "command": "http-server dist/scrabble-solver-frontend",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "lint": {
      "command": "eslint scrabble-solver-commons scrabble-solver-backend scrabble-solver-frontend scripts --ext .js"
    },
    "prepare-dictionary": {
      "command": "babel-node scripts/prepare-dictionary.js -- -i -o dictionary.txt"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kamilmielnik/scrabble-solver.git"
  },
  "author": {
    "name": "Kamil Mielnik",
    "email": "kamil.adam.mielnik@gmail.com",
    "url": "https://kamilmielnik.github.io/"
  },
  "license": "CC-BY-NC-ND-4.0",
  "bugs": {
    "url": "https://github.com/kamilmielnik/scrabble-solver/issues"
  },
  "homepage": "https://github.com/kamilmielnik/scrabble-solver#readme",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "better-npm-run": "0.1.0",
    "cheerio": "^1.0.0-rc.2",
    "decompress": "^4.2.0",
    "fs-extra": "^4.0.2",
    "http-server": "^0.10.0",
    "npm-run-all": "^4.1.1",
    "opn-cli": "^3.1.0",
    "request": "^2.82.0",
    "yargs": "^9.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.1",
    "eslint": "^4.7.2",
    "eslint-plugin-react": "^7.4.0",
    "rimraf": "^2.6.2",
    "start-server-webpack-plugin": "^2.2.0",
    "webpack-node-externals": "^1.6.0"
  }
}
