{
  "name": "scrabble-solver-backend",
  "version": "1.0.0",
  "description": "Scrabble Solver - Backend",
  "main": "src/index.js",
  "engines": {
    "node": ">=7.9.0"
  },
  "scripts": {
    "build": "better-npm-run build",
    "build:prod": "better-npm-run build:prod",
    "start": "better-npm-run start",
    "start:prod": "better-npm-run start:prod",
    "test": "better-npm-run test",
    "test:watch": "better-npm-run test:watch"
  },
  "betterScripts": {
    "build": {
      "command": "rimraf dist && webpack",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "build:prod": {
      "command": "rimraf dist && webpack",
      "env": {
        "NODE_ENV": "production",
        "API_HOST": "http://kamilmielnik.pl",
        "API_PORT": "5000"
      }
    },
    "start": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "start:prod": {
      "command": "node dist/index.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test": {
      "command": "jest",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "test:watch": {
      "command": "jest --watch",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kamilmielnik/scrabble-solver.git"
  },
  "author": {
    "name": "Kamil Mielnik",
    "email": "kamil.adam.mielnik@gmail.com",
    "url": "https://kamilmielnik.github.io/"
  },
  "license": "CC-BY-NC-ND-4.0",
  "bugs": {
    "url": "https://github.com/kamilmielnik/scrabble-solver/issues"
  },
  "homepage": "https://github.com/kamilmielnik/scrabble-solver#readme",
  "dependencies": {
    "body-parser": "^1.18.2",
    "cheerio": "^1.0.0-rc.2",
    "cors": "^2.8.4",
    "express": "^4.15.5",
    "express-http-proxy": "^1.0.6",
    "lodash": "^4.17.4",
    "scrabble-solver-commons": "file:../scrabble-solver-commons"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "better-npm-run": "0.1.0",
    "jest": "^21.2.0",
    "nodemon": "^1.12.1",
    "rimraf": "^2.6.2",
    "webpack": "^3.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "..",
      "node_modules"
    ]
  }
}
